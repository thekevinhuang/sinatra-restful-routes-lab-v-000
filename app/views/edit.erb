<h1><%=@recipe.name%></h1>

<p>
  <%=@recipe.ingredients%><br>
  <%=@recipe.cook_time%><br>
</p>

<form method="POST" action="/recipes/:id">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="text" value="name" placeholder="New Name">
  <input type="text" value="ingredients" placeholder="New Ingredients">
  <input type="text" value="cook_time" placeholder="New Cooking Time">
  <input type="submit" value="submit">
</form>
